<!DOCTYPE html>
<html>

<head>
    <title>Id√©e de formulaire</title>
    <style>
        .container {
            width: 50%;
            margin: 50px auto;
            border: 1px solid #ccc;
            padding: 20px;
            border-radius: 5px;
            background-color: #f9f9f9;
        }

        .form-group {
            margin-bottom: 20px;
        }

        label {
            display: block;
            margin-bottom: 5px;
        }

        input[type="text"] {
            width: 100%;
            padding: 10px;
            font-size: 16px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        button {
            padding: 10px 20px;
            font-size: 16px;
            border: none;
            border-radius: 5px;
            background-color: #007bff;
            color: #fff;
            cursor: pointer;
        }

        button:hover {
            background-color: #0056b3;
        }
    </style>
    <script src="/angular.min.js"></script>
    <script src="/altcha.min.js" type="module"></script>
</head>

<body ng-app="myApp" ng-controller="FormController">
    <div class="container">
        <p><%= data?.error %></p>
        <p><%= data?.success %></p>
        <h2>Id√©e de formulaire</h2>
        <form id="form" method="POST" action="/idea" ng-submit="submitUrl()">
            <div class="form-group">
                <label for="url">URL :</label>
                <input type="text" id="url" name="url" ng-model="formData.url" required>
            </div>
            <div class="form-group">
                <altcha-widget
                    id="altcha"
                    challengeurl="/captcha"
                    hidelogo
                    hidefooter
                    strings="{&quot;label&quot;:&quot;ü§ñ Bip boup ...&quot;,&quot;verifying&quot;:&quot;‚öôÔ∏è V√©rification ...&quot;,&quot;verified&quot;:&quot;üëå Vous n'√™tes pas un robot&quot;}"
                ></altcha-widget>
            </div>
            <button id="submit" type="submit">Envoyer</button>
        </form>
    </div>

    <script>
        var app = angular.module('myApp', []);
        app.controller('FormController', function ($scope, $http) {
            $scope.submitUrl = function () {
                document.getElementById("form").submit();
            };
        });
    </script>
</body>

</html>
